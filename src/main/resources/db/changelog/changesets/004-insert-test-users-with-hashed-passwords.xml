<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="004-insert-test-users-bcrypt" author="artem">
        <comment>Заполнение таблицы users тестовыми пользователями с хешированными паролями BCrypt</comment>

        <!-- Тестовые пользователи с хешированными паролями -->
        <insert tableName="users" schemaName="marketplace">
            <column name="username" value="admin"/>
            <!-- Пароль: admin123 -->
            <column name="password" value="$2a$10$N9qo8uLOickgx2ZMRZoMyeIjZAgcfl7p92ldGxad68LJZdL17lhWy"/>
            <column name="is_active" valueBoolean="true"/>
        </insert>

        <insert tableName="users" schemaName="marketplace">
            <column name="username" value="user"/>
            <!-- Пароль: user123 -->
            <column name="password" value="$2a$10$K8qO9LPOjckfx3aMSAoNyeVjZBgdgl8q93meGxbe69KLZeM18miXy"/>
            <column name="is_active" valueBoolean="false"/>
        </insert>

        <insert tableName="users" schemaName="marketplace">
            <column name="username" value="testuser"/>
            <!-- Пароль: test123 -->
            <column name="password" value="$2a$10$P9ro8vLOjdkgx4ZNSBoMyeKjaBhcgl9r94neHxce70LMZfN29njYz"/>
            <column name="is_active" valueBoolean="false"/>
        </insert>

        <rollback>
            <delete tableName="users" schemaName="marketplace">
                <where>username IN ('admin', 'user', 'testuser')</where>
            </delete>
        </rollback>
    </changeSet>

</databaseChangeLog>
